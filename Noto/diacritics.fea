  # АРНХЛТ
  pos base [uni0410 uni0414 uni041B uni0422 uni0425] <anchor 950 1600> mark @TOP_MARKS <anchor 480 0> mark @BOTTOM_MARKS;

  # РУГI
  pos base [uni0420 uni0423 uni0413 uni0406] <anchor 800 1600> mark @TOP_MARKS <anchor 200 0> mark @BOTTOM_MARKS;

  #Н
